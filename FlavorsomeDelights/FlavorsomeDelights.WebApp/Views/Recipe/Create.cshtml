@{
    ViewData["Title"] = "Create New Recipe Page";
}
@model FlavorsomeDelights.WebApp.Models.RecipeDetailedItem

<div class="container-create-form" style="text-align: center;">
    <div class="jumbotron-create-form jumbotron-fluid">
        <form method="post" style="max-width: 400px; margin: 0 auto;">
            <label for="RecipeTitle">Recipe Title:</label>
            <input type="text" id="RecipeTitle" name="RecipeTitle" style="width: 100%; padding: 10px; margin-bottom: 10px; border: 1px solid #ccc;
            border-radius: 5px;">

            <label for="HowToPrepare">How to prepare:</label><br />
            <textarea id="HowToPrepare" name="HowToPrepare" style="width: 100%; height: 150px; padding: 10px; margin-bottom: 10px;
            border: 1px solid #ccc; border-radius: 5px;"></textarea>

            <label for="Complexity">Complexity:</label>
            <select id="Complexity" name="Complexity" style="width: 100%; padding: 10px; margin-bottom: 10px; border: 1px solid #ccc;
            border-radius: 5px;">
                <option value="Beginner">Beginner</option>
                <option value="Intermediate">Intermediate</option>
                <option value="Advanced">Advanced</option>
            </select>

            <label for="Serves">Serves:</label>
            <input type="number" id="Serves" name="Serves" style="width: 100%; padding: 10px; margin-bottom: 10px; border: 1px solid #ccc;
            border-radius: 5px;">

            <label for="ImageUrl">Image URL:</label>
            <input type="url" id="ImageUrl" name="ImageUrl" style="width: 100%; padding: 10px; margin-bottom: 10px; border: 1px solid #ccc;
            border-radius: 5px;">

            <div>
                <button type="submit" class="btn btn-outline-dark" style="padding: 10px 20px;">Submit</button>
            </div>
        </form>
    </div>
</div>
